{
  "name": "socketless",
  "version": "0.13.12",
  "type": "module",
  "description": "A framework and methodology for writing web socket RPC programs, without writing a single line of web socket or RPC code.",
  "main": "library.js",
  "scripts": {
    "build": "npm run build:socketless && npm run build:library",
    "build:socketless": "node src/generate-socketless.js > src/webclient/socketless.js",
    "build:library": "esbuild ./src/index.js --bundle --platform=node --target=node20 --packages=external --format=esm --minify > library.js",
    "demo:simple": "cd demos && npm run simple",
    "demo:web": "cd demos && npm run web",
    "prettier": "prettier --write ./**/*.js",
    "test": "npm run test:ast && npm run prettier && npm run build && npm run test:mocha",
    "test:ast": "tsc ./src/index.js --checkJs --noEmit --module nodenext",
    "test:mocha": "mocha test/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pomax/socketless.git"
  },
  "keywords": [
    "client",
    "server",
    "websocket",
    "javascript",
    "framework"
  ],
  "author": "Pomax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pomax/socketless/issues"
  },
  "homepage": "https://github.com/Pomax/socketless#readme",
  "dependencies": {
    "chai-as-promised": "^7.1.1",
    "rfc6902": "^5.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "esbuild": "^0.19.4",
    "express": "^4.18.2",
    "mocha": "^10.2.0",
    "pem": "^1.14.8",
    "prettier": "^3.0.3",
    "puppeteer": "^21.3.6",
    "typescript": "^5.2.2"
  }
}
