{
  "name": "socketless",
  "version": "0.13.12",
  "type": "module",
  "description": "A framework and methodology for writing web socket client/server code, without writing any socket code.",
  "main": "src/index.js",
  "scripts": {
    "prettier": "prettier --write ./**/*.js",
    "test": "npm run test:ast && npm run prettier && npm run bundle && npm run test:jest",
    "test:ast": "tsc ./src/index.js --checkJs --noEmit --module nodenext",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose=true --silent=false",
    "demo:simple": "cd demos && npm run simple",
    "demo:web": "cd demos && npm run web",
    "bundle": "esbuild ./src/index.js --bundle --platform=node --target=node20 --packages=external --format=esm --minify > bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pomax/socketless.git"
  },
  "keywords": [
    "client",
    "server",
    "websocket",
    "javascript",
    "framework"
  ],
  "author": "Pomax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pomax/socketless/issues"
  },
  "homepage": "https://github.com/Pomax/socketless#readme",
  "dependencies": {
    "rfc6902": "^5.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "esbuild": "^0.19.4",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "pem": "^1.14.8",
    "prettier": "^3.0.3",
    "puppeteer": "^21.3.6",
    "typescript": "^5.2.2"
  }
}
